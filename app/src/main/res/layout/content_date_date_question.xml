<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#388e3c"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yatra.whackathon.questions.DateDateQuestionActivity"
    tools:showIn="@layout/activity_date_date_question">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="Which date you want to fly?"
        android:textSize="35sp"
        android:gravity="center"
        android:paddingTop="70dp"
        android:id="@+id/text"
        android:paddingRight="40dp" />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your date"
        android:layout_marginTop="20dp"
        android:id="@+id/date"
        android:layout_below="@+id/text"
        android:paddingLeft="20dp"
        app:met_baseColor="#ffffff"
        android:paddingRight="40dp"
        app:met_primaryColor="#ffffff"
        app:met_errorColor="#ddaa00"
        app:met_floatingLabel="normal"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/next_question"
        android:layout_marginTop="40sp"
        android:layout_below="@+id/date"
        android:src="@android:drawable/ic_media_next"/>

</RelativeLayout>
